// euler.min
// The program computes Euler's number (e) using the definition, with a certain amount of iterations given by the user.
// e = lim_{n -> infinity} (1+1/n)^n

var e: float = 1.0;
var n: int = 1;
var message: string = "Enter the number of iterations:\n";

print(message);
read(n);

while(n>0){
	e = e * (1.0 + 1.0/n);
	n = n - 1;
}

print(e);
